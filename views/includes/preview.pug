.section
    h4
        - let link = `/posts/${post.id}/`;
        a(href=link)=post.title
    - let userbox = post.author
    include userbox.pug
    p.postcomments #{post.commentcount} #[img(src="/ico/comment.png" width="16" height="16")]
    - let postpreview = `${post.body.substring(0, 100)}${(post.body.length > 100) ? "..." : ""}`;
    p.postpreview=postpreview