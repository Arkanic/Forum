    "@types/express": "^4.17.13",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-middleware": "^5.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.2",
    "pug": "^3.0.2",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-dev-middleware": "^5.3.1",
